{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "taskhorizon",
        "version": "0.2.5"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "shell": {
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.jukrb0x.taskhorizon",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null,
                "minimumSystemVersion": "10.13.0"
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "TaskHorizon",
                "width": 1250,
                "height": 850,
                "minWidth": 1000,
                "minHeight": 600,
                "transparent": false,
                "decorations": true,
                "center": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "fileDropEnabled": false
            }
        ]
    }
}
