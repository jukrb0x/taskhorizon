{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./lib/cjs",
    "composite": true,
    "noResolve": false,
    "sourceMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "./lib/types"
  },
  "include": ["src"],
  "exclude": [
    "coverage",
    "process.config.js",
    "jest.config.js",
    "node_modules",
    "./public",
    "lib",
    "test"
  ],
  "references": [
    {
      "path": "../logger/tsconfig.json"
    }
  ]
}
